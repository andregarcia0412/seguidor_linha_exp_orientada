#include <Servo.h>

int frente = 0;

int esquerda = 0;

int direita = 0;

Servo servo_4;

long readUltrasonicDistance(int triggerPin, int echoPin)
{
  pinMode(triggerPin, OUTPUT);  // Clear the trigger
  digitalWrite(triggerPin, LOW);
  delayMicroseconds(2);
  // Sets the trigger pin to HIGH state for 10 microseconds
  digitalWrite(triggerPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(triggerPin, LOW);
  pinMode(echoPin, INPUT);
  // Reads the echo pin, and returns the sound wave travel time in microseconds
  return pulseIn(echoPin, HIGH);
}

void setup() {
    //motor direito
  pinMode(11, OUTPUT);
  pinMode(10, OUTPUT);
  //motor esquerdo
  pinMode(6, OUTPUT);
  pinMode(5, OUTPUT);

  Serial.begin(9600);

  servo_4.attach(3, 500, 2500);

  direita = 0;
  esquerda = 0;
  frente = 0;
  servo_4.write(90);
  delay(100);

}

void loop() {
  int pwm = 180; //define a rotação dos motores, vai de 0 a 255

  if (frente <= 25){
    digitalWrite(11, LOW);
    digitalWrite(10, LOW);
    digitalWrite(6, LOW);
    digitalWrite(5, LOW);
    servo_4.write(90);
    delay(500);
    frente = 0.01723 * readUltrasonicDistance(9, 8);

    servo_4.write(180);
    delay(500);
    esquerda = 0.01723 * readUltrasonicDistance(9, 8);

    servo_4.write(0);
    delay(500);
    direita = 0.01723 * readUltrasonicDistance(9, 8);

    servo_4.write(90);
    delay(200);

    Serial.print("Frente: ");
    Serial.print(frente);
    Serial.print(" Direita: ");
    Serial.print(direita);
    Serial.print(" Esquerda: ");
    Serial.println(esquerda);
    Serial.println("-------------------------------------------------------------");
    if (direita > esquerda && direita > 25){
      andar_direita(200);
    } else if (esquerda > 25){
      andar_esquerda(200);
    } else{
      andar_tras(200);
    }

    delay(200);
  } else{
      frente = 0.01723 * readUltrasonicDistance(9, 8);
      andar_frente(200);
    }
  delay(200);
  }

  void andar_direita(int vel){
    analogWrite(11, vel);
    digitalWrite(10, LOW);
    analogWrite(6, vel);
    digitalWrite(5, LOW);
  }
  void andar_esquerda(int vel){
    digitalWrite(11, LOW);
    analogWrite(10, vel);
    digitalWrite(6, LOW);
    analogWrite(5, vel);
  }
  void andar_tras(int vel){
    analogWrite(11, vel);
    digitalWrite(10, LOW);
    digitalWrite(6, LOW);
    analogWrite(5, vel);
  }
  void andar_frente(int vel){
    digitalWrite(11, LOW);
    analogWrite(10, vel);
    analogWrite(6, vel);
    digitalWrite(5, LOW);   
  }
